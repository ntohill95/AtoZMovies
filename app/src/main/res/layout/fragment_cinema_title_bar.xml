<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.niamhtohill.atozmovies.home.cinemas.CinemasViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cinema_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="Cinema Name"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cinema_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/weekday_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/cinema_title_text_view">

            <Button
                android:id="@+id/sunday_tab_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Sun"
                android:layout_margin="1dp"
                android:background="@color/colorTextIcons"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/monday_tab_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Mon"
                android:layout_margin="1dp"
                android:background="@color/colorPrimaryLight"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/tuesday_tab_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Tue"
                android:layout_margin="1dp"
                android:background="@color/colorPrimaryLight"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/wednesday_tab_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Wed"
                android:layout_margin="1dp"
                android:background="@color/colorPrimaryLight"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/thursday_tab_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Thur"
                android:layout_margin="1dp"
                android:background="@color/colorPrimaryLight"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/friday_tab_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Fri"
                android:layout_margin="1dp"
                android:background="@color/colorPrimaryLight"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/saturday_tab_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Sat"
                android:layout_margin="1dp"
                android:background="@color/colorPrimaryLight"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/colorDivider"
            android:layout_margin="10dp"
            android:layout_height="2dp"/>
    </LinearLayout>
</layout>